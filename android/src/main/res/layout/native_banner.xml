<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_native_image"
        android:background="@color/alert_dialog_confirm_btn_left_text_color"
        android:layout_width="100dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0px"
        android:layout_weight="1"
        android:padding="4dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_native_ad_title"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="16sp" />
        <TextView
            android:paddingTop="5dp"
            android:id="@+id/tv_native_ad_desc"
            android:text=""
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="14sp" />
    </LinearLayout>


 <TextView
     android:id="@+id/tv_source"
     android:textSize="12sp"
     android:textColor="#F89B9696"
     android:text="腾讯广告"
     android:layout_gravity="bottom"
     android:layout_marginTop="5dp"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_native_creative"
        android:text="查看详情"
         android:background="@drawable/shape_btn"
        android:textColor="@android:color/white"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
         android:layout_gravity="center_vertical"
        />

</LinearLayout>